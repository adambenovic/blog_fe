{% extends 'layout.html.twig' %}

{% block title %}{{ 'nav.my'|trans }}{% endblock %}

{% block body %}
    {% if errorMessage is defined %}
        <h1>{{ 'blog.none'|trans }}</h1>
    {% endif %}

    <article class="blog">
        {% if blogs is defined %}
            <ul>
            {% for blog in blogs %}
                <li>
                <h2>
                    <a href="/{{ blog.id }}">{{ blog.title|striptags }}</a>
                </h2>
                    <a href="{{ path('editmypost', {'id':blog.id}) }}" style="color:#337ab7">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {{ 'blog.edit'|trans }}
                    </a>
                    <a href="{{ path('deletemypost', {'id':blog.id}) }}" style="color:#337ab7">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> {{ 'blog.delete'|trans }}
                    </a>
                </li>
                <br><hr>
            {% endfor %}
            </ul>
        {% endif %}
    </article>
{% endblock %}